0404C7             0026*  ; CLK_DIV is a 2-bit mask that sets the timer input source clock divider
0404C7             0027*  CLK_DIV_256:  equ %00001100 ;
0404C7             0028*  CLK_DIV_64:   equ %00001000 ;
0404C7             0029*  CLK_DIV_16:   equ %00000100 ;
